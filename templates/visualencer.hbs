                            <label><p style="display:flex;align-items:center;gap:0.5rem;"><strong>Override code</strong></p>
                                <textarea data-config="body" rows="6">{{node.config.body}}</textarea>
                            </label>
                        </div>
                    </fieldset>
                    {{/if}}

                    {{!-- VOLUME (child) --}}
                    {{#if (eq node.type "volume")}}
